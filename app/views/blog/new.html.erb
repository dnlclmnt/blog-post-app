<h1>Add a New Blog Post</h1>
<%= form_with url: '/blogs', local: true do |form| %>
    <div style="text-align:center">
    <%= form.label :title %>: &nbsp; &nbsp;
    <%= form.text_field :title %>
    <br>
    <br>
    <%= form.label :content %>:
    <%= form.text_field :content %>
    <br>
    <br>
    <%= form.submit 'Add Blog Post' %>
    </div>
<% end %>